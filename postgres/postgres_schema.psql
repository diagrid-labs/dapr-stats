CREATE VIEW dockerhub_images_view AS
SELECT 
    namespace,
    image_name,
    collection_date,
    EXTRACT(DAY FROM (collection_date - LAG(collection_date) OVER (PARTITION BY namespace, image_name ORDER BY collection_date)))::NUMERIC AS days_diff,
    (pull_count - LAG(pull_count) OVER (PARTITION BY namespace, image_name ORDER BY collection_date)) AS pull_count_diff,
    ROUND((pull_count - LAG(pull_count) OVER (PARTITION BY namespace, image_name ORDER BY collection_date))::DECIMAL / 
          EXTRACT(DAY FROM (collection_date - LAG(collection_date) OVER (PARTITION BY namespace, image_name ORDER BY collection_date)))::NUMERIC * 7) AS avg_weekly_diff
FROM 
    dockerhub_images
ORDER BY 
    collection_date

