CREATE OR REPLACE VIEW nuget_dapr_actors_view AS

SELECT
  collection_date,
  package_version,
  days_diff,
  round(
    (
      download_count - lag(download_count, 1, 0::bigint) OVER (
        PARTITION BY
          package_version
        ORDER BY
          collection_date
      )
    )::numeric / days_diff * 7::numeric
  ) AS download_count_increment
FROM
  (
    SELECT
      nuget_dapr_client.collection_date::date AS collection_date,
      nuget_dapr_client.package_version,
      EXTRACT(
        day
        FROM
          nuget_dapr_client.collection_date - lag(
            nuget_dapr_client.collection_date,
            1,
            nuget_dapr_client.collection_date - '15 days'::interval
          ) OVER (
            PARTITION BY
              nuget_dapr_client.package_version
            ORDER BY
              nuget_dapr_client.collection_date
          )
      ) AS days_diff,
      nuget_dapr_client.download_count
    FROM
      nuget_dapr_client
    WHERE
      nuget_dapr_client.package_name::text = 'Dapr.Actors'::text
  ) sub
ORDER BY
  collection_date,
  package_version;

