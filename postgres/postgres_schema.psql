CREATE VIEW diagrid_dashboard_view AS
SELECT 
    collection_date,
    EXTRACT(DAY FROM (collection_date - LAG(collection_date) OVER (ORDER BY collection_date)))::NUMERIC AS days_diff,
    (download_count - LAG(download_count) OVER (ORDER BY collection_date)) AS download_count_diff,
    ROUND((download_count - LAG(download_count) OVER (ORDER BY collection_date))::DECIMAL / 
          EXTRACT(DAY FROM (collection_date - LAG(collection_date) OVER (ORDER BY collection_date)))::NUMERIC * 7) AS avg_weekly_diff
FROM 
    diagrid_dashboard
ORDER BY 
    collection_date

